<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

        <mvc:resources mapping="/static/**" location="/static/"/>

        <mvc:resources mapping="/static/plugins/**" location="/static/plugins/"/>
        <mvc:resources mapping="/static/plugins/css/**" location="/static/plugins/css/"/>
        <mvc:resources mapping="/static/plugins/css/images/**" location="/static/plugins/css/images/"/>
        <mvc:resources mapping="/static/plugins/fonts/**" location="/static/plugins/fonts/"/>

        <mvc:resources mapping="/static/account/**" location="/static/account/"></mvc:resources>

        <mvc:resources mapping="/static/pmonitor/**" location="/static/pmonitor/"/>
        <mvc:resources mapping="/static/pmonitor/css/**" location="/static/pmonitor/css/"/>
        <mvc:resources mapping="/static/pmonitor/js/**" location="/static/pmonitor/js/"/>
        <mvc:resources mapping="/static/pmonitor/images/**" location="/static/pmonitor/images/"/>

</beans>
